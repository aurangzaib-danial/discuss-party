<% title 'Manage tags' %>

<h2 id="simpleHeading">Manage tags</h2>

<%# CREATE UPDATE DELETE TAGS  %>
<div id="createTag" class="text-center">
  <%= link_to 'Create tag', new_manage_tag_path, class: 'btn btn-outline-primary' %>
</div>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Topics count</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td class="text-capitalize"><%= tag.name %></td>
        <td><%= tag.topics_count %></td>
        <td>
        <%= link_to 'Edit', edit_manage_tag_path(tag), class: 'btn btn-secondary' %> 
        <br><br><%= link_to 'Delete', manage_tag_path(tag), method: :delete, data: {confirm: "Are you sure you want to delete #{tag.name}?"}, class: 'btn btn-danger'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
