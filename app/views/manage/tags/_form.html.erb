<%= form_with model: [:manage, tag], local: true, html: {class: 'manage-form'} do |form| %>
  <%= render 'errors', tag: tag %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= form.label :text_color %>
    <%= form.text_field :text_color, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :background_color %>
    <%= form.text_field :background_color, class: 'form-control' %>
  </div>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>

<div class="text-center">
  <%= link_to 'Back', manage_tags_path, class: 'btn btn-secondary back-button' %>
</div>

