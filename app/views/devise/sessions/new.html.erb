<% title 'Sign in' %>

<section class="devise_auth">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'devise_form sign_in_form text-center'})  do |f| %>
    
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <%= f.label :email, class: 'sr-only'%>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address', autocomplete: 'username'%>

    <%= f.label :password, class: 'sr-only'%>
    <%= f.password_field :password, autocomplete: true, class: 'form-control', placeholder: 'Password' %>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %> Remember me
        <% end %>
      </div>
    <% end %>

    <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>
</section>
<%= render "devise/shared/links" %>
