<%= render "devise/shared/error_messages", resource: resource %>
<section class="devise_auth">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'devise_form sign_up_form text-center'})  do |f| %>

    <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

    <%= f.label :name, class: 'sr-only'%>
    <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name' %>

    <%= f.label :email, class: 'sr-only'%>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email address' %>

     <div class="input-group">
      <div class="custom-file">
        <%= f.label :avatar, 'Display picture', class: 'custom-file-label text-left' %>
        <%= f.file_field :avatar, class: 'custom-file-input'%>
      </div>
    </div>

    <small class="form-text text-muted text-left mb-3" style="margin-left: 0.9rem;">(optional)</small>

    <%= f.label :password, class: 'sr-only'%>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: 'new-password' %>

    <%= f.label :password_confirmation, class: 'sr-only'%>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password', autocomplete: 'new-password' %>

    <%= f.submit 'Sign up', class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>
</section>
<%= render "devise/shared/links" %>
