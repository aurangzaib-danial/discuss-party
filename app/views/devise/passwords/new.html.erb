<% title 'Forgot your password?' %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'confirmation_form' }) do |f| %>

  <% if resource.errors.any? %>
    <div id="error_explanation" class="text-danger">
      <h4>There were following problems</h4>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>
  
  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-4' %>

  <%= f.submit 'Send me reset instructions', class: 'btn btn-primary btn-block' %>
<% end %>
