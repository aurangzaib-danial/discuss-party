<h2>Create Topic</h2>

<%= form_with model: @topic do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control',  "aria-describedby": "titleHelp"%>
    <small id="titleHelp" class="form-text text-muted">Between 5 - 70 Characters</small>
  </div>

  <div class="form-group">
    
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
