<h2>Create Topic</h2>

<%= form_with model: @topic do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control',  "aria-describedby": "titleHelp"%>
    <small id="titleHelp" class="form-text text-muted">Between 5 - 70 Characters</small>
  </div>

  <label>Visibility</label>
  <div class="form-check">
    <%= form.radio_button :status, 'public', class: 'form-check-input' %>
    <%= form.label :status, 'Public', value: 'Public', class: 'form-check-label' %>
  </div>

  <div class="form-check">
    <%= form.radio_button :status, 'private', class: 'form-check-input' %>
    <%= form.label :status, 'Private', value: 'Private', class: 'form-check-label' %>
  </div>

  <div class="form-group" style="margin-top: 10px;">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', "aria-describedby": "descriptionHelp", rows: 4%>
    <small id="descriptionHelp" class="form-text text-muted">Write about what you want to discuss about the topic</small>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
