<div class="modal " tabindex="-1" role="dialog" id="reportModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Report <%= @topic.title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with model: [@topic, @report], id: 'reportForm', local: true do |form| %>
          <% Report.report_types.each do |type| %>
            <div class="form-check">
              <%= form.radio_button :report_type, type, class: 'form-check-input' %>
              <%= form.label :report_type, type.capitalize, value: type, class: 'form-check-label' %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-danger" form="reportForm">Report</button>
      </div>
    </div>
  </div>
</div>
