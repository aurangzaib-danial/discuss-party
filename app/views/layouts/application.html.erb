<!DOCTYPE html>
<html>
  <head>
    <title>DiscussParty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <%= render 'partials/navigation' %>
    </header>
    <%= render 'partials/flash' %>
    <main class="container">
      <% if user_signed_in? %>
        <p class="text-center">Signed in as: <a href="#" class="text-dark text-capitalize"><%= current_user.name %></a></p>
      <% end %>
      
      <%= yield %>
    </main>
  </body>
</html>
