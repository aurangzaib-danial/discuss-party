<%= heading "Found #{pluralize(@topics_scope.count, 'topic')}" %>

<%= form_with url: search_path, method: :get, local: true do %>
  <div class="form-group">
    <%= search_field_tag :q, @query, class: 'form-control', id: 'big_search', placeholder: 'Search for topics', 'aria-label': 'Search' %>
  </div>

  <input type="submit" style="position: absolute; left: -9999px; width: 1px; height: 1px;" id="big_search_submit">
<% end %>

<%= render(@topics) %>
