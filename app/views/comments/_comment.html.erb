<article class="comment">
  <div class="comment-info">
    <%= user_thumbnail_and_name(comment.user) %>
    <%= created_at_in_words(comment) %>
  </div>
  <div class="comment-content">
    <%= comment.content %>
  </div>
  <div class="text-right">
    <button class="btn btn-danger">Delete</button>
  </div>
</article>


