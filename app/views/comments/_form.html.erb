<%= form_with model: [topic, comment], local: true, html: {id: 'commentForm'} do |form| %>
  <div class="form-group">
    <%= form.rich_text_area :content, class: "comment-trix-editor", placeholder: 'What are your thoughts?' %>
  </div>
  <div class="text-right">
    <%= form.submit 'Comment', class: 'btn btn-primary', data: { disable_with: false } %>
  </div>
<% end %>
