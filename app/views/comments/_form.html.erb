<%= form_with model: [topic, Comment.new], local: true do |form| %>
  <div class="form-group">
    <%= form.text_area :content, class: 'form-control', placeholder: 'What are your thoughts?', rows: 4 %>
  </div>
  <div class="text-right">
    <%= form.submit 'Comment', class: 'btn btn-primary' %>
  </div>
<% end %>
